# Database
DATABASE_URL=postgresql://user:password@localhost:5432/market_data

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Polygon.io
POLYGON_API_KEY=pk_your_key_here

# Logging
LOG_LEVEL=INFO

# Backfill Schedule (UTC)
BACKFILL_SCHEDULE_HOUR=2
BACKFILL_SCHEDULE_MINUTE=0

# Email Alerts (optional)
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=your-email@example.com
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_PASSWORD=your_app_password

# Webhook Alerts (optional)
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
